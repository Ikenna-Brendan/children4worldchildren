# Ensure package-lock.json is generated with exact versions
save-exact=true

# Use the latest npm for better performance
engine-strict=true

# Prefer offline installation when possible
prefer-offline=true

# Enable parallel installation of packages
prefer-frozen-lockfile=true

# Disable package-lock.json for workspaces
package-lock=false

# Use the public npm registry
registry=https://registry.npmjs.org/

# Configure network concurrency
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Configure cache settings
cache-min=999999999
prefer-offline=true
prefer-online=false
